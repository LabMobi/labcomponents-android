<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        style="@style/Text.HeadlineLarge"
        android:text="Button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_enabled"
            style="@style/Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enabled"
            android:checked="true" />

        <TextView
            style="@style/Text.HeadlineSmall"
            android:text="Filled button" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/filled"
            style="@style/Widget.Lab.Button.FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filled" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/filled_icon_start"
            style="@style/Widget.Lab.Button.FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Filled"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/filled_icon_end"
            style="@style/Widget.Lab.Button.FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Filled"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/filled_big"
            style="@style/Widget.Lab.Button.FilledButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Filled" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/filled_big_icon_start"
            style="@style/Widget.Lab.Button.FilledButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Filled Big"
            app:icon="@drawable/ic_placeholder16" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/filled_big_icon_end"
            style="@style/Widget.Lab.Button.FilledButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Filled Big"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16" />

        <TextView
            style="@style/Text.HeadlineSmall"
            android:text="Tonal button" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/tonal"
            style="@style/Widget.Lab.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tonal" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/tonal_icon_start"
            style="@style/Widget.Lab.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Tonal"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/tonal_icon_end"
            style="@style/Widget.Lab.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Tonal"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/tonal_big"
            style="@style/Widget.Lab.Button.TonalButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Tonal Big" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/tonal_big_icon_start"
            style="@style/Widget.Lab.Button.TonalButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Tonal Big"
            app:icon="@drawable/ic_placeholder16" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/tonal_big_icon_end"
            style="@style/Widget.Lab.Button.TonalButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Tonal Big"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16" />

        <TextView
            style="@style/Text.HeadlineSmall"
            android:text="Outlined button" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/outlined"
            style="@style/Widget.Lab.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outlined" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/outlined_icon_start"
            style="@style/Widget.Lab.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Outlined"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/outlined_icon_end"
            style="@style/Widget.Lab.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Outlined"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/outlined_big"
            style="@style/Widget.Lab.Button.OutlinedButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Outlined Big" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/outlined_big_icon_start"
            style="@style/Widget.Lab.Button.OutlinedButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Outlined Big"
            app:icon="@drawable/ic_placeholder16" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/outlined_big_icon_end"
            style="@style/Widget.Lab.Button.OutlinedButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Outlined Big"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16" />


        <TextView
            style="@style/Text.HeadlineSmall"
            android:text="Text button" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/text"
            style="@style/Widget.Lab.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/text_icon_start"
            style="@style/Widget.Lab.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Text"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/text_icon_end"
            style="@style/Widget.Lab.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Text"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16"
            />

        <mobi.lab.components.button.LabButton
            android:id="@+id/text_big"
            style="@style/Widget.Lab.Button.TextButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Text Big" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/text_big_icon_start"
            style="@style/Widget.Lab.Button.TextButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Text Big"
            app:icon="@drawable/ic_placeholder16" />

        <mobi.lab.components.button.LabButton
            android:id="@+id/text_big_icon_end"
            style="@style/Widget.Lab.Button.TextButton.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="Text Big"
            app:iconGravity="end"
            app:icon="@drawable/ic_placeholder16" />
    </LinearLayout>
</LinearLayout>
