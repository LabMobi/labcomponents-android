<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="TextField" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Text.SectionHeadline"
                android:text="TextFields" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="48dp"
                android:paddingEnd="48dp">

                <mobi.lab.components.textfield.LabTextField
                    android:id="@+id/text_field_no_icons"
                    style="@style/Widget.Lab.TextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:hint="Label"
                    app:errorEnabled="true" />

                <mobi.lab.components.textfield.LabTextField
                    android:id="@+id/text_field_start_icon"
                    style="@style/Widget.Lab.TextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:hint="Label"
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/icon_clear" />


                <mobi.lab.components.textfield.LabTextField
                    android:id="@+id/text_field_end_icon"
                    style="@style/Widget.Lab.TextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:hint="Label"
                    app:errorEnabled="true"
                    app:endIconMode="clear_text" />

                <mobi.lab.components.textfield.LabTextField
                    android:id="@+id/text_field_both_icons"
                    style="@style/Widget.Lab.TextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:hint="Label"
                    app:errorEnabled="true"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/icon_clear"
                    app:startIconDrawable="@drawable/icon_clear" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_enabled"
                    style="@style/Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Enabled"
                    android:checked="true" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_error"
                    style="@style/Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Show error"
                    android:checked="false" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
