<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin">

            <TextView
                style="@style/Text.SectionHeadline"
                android:text="Text inputs" />

            <mobi.lab.components.textfield.LabTextField
                android:id="@+id/text_field"
                style="@style/Lab.Widget.TextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:endIconDrawable="@drawable/icon_clear"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/icon_clear"
                app:placeholderText="This is a placeholder"
                app:helperText="This is a helper text"
                app:suffixText="Suffix"
                app:prefixText="Prefix"
                app:counterEnabled="true"
                app:counterMaxLength="9"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <mobi.lab.components.textfield.LabTextField
                    android:id="@+id/text_field_2"
                    style="@style/Lab.Widget.TextField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/lab_size_8"
                    app:placeholderText="This is a placeholder"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/check_text_field_enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="Enabled"
                        android:checked="true"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/check_text_field_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="Error"
                        android:checked="false"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <TextView
                style="@style/Text.SectionHeadline"
                android:text="Text styles" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.HeadlineLarge"
                android:text="Lab.TextAppearance.HeadlineLarge" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.HeadlineMedium"
                android:text="Lab.TextAppearance.HeadlineMedium" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.HeadlineSmall"
                android:text="Lab.TextAppearance.HeadlineSmall" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.TitleLarge"
                android:text="Lab.TextAppearance.TitleLarge" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.TitleMedium"
                android:text="Lab.TextAppearance.TitleMedium" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.TitleSmall"
                android:text="Lab.TextAppearance.TitleSmall" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.BodyLarge"
                android:text="Lab.TextAppearance.BodyLarge" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.BodyLarge.Emphasis"
                android:text="Lab.TextAppearance.BodyLarge.Emphasis" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.BodyMedium"
                android:text="Lab.TextAppearance.BodyMedium" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.BodyMedium.Emphasis"
                android:text="Lab.TextAppearance.BodyMedium.Emphasis" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.BodySmall"
                android:text="Lab.TextAppearance.BodySmall" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.BodySmall.Emphasis"
                android:text="Lab.TextAppearance.BodySmall.Emphasis" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.LabelLarge"
                android:text="Lab.TextAppearance.LabelLarge" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.LabelMedium"
                android:text="Lab.TextAppearance.LabelMedium" />

            <TextView
                style="@style/Text.TextStyle"
                android:textAppearance="@style/Lab.TextAppearance.LabelSmall"
                android:text="Lab.TextAppearance.LabelSmall" />

            <TextView
                style="@style/Text.SectionHeadline"
                android:text="Buttons" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/labColorSelectorOnPrimary"
                    android:text="Enabled"
                    app:backgroundTint="?attr/labColorSelectorPrimary"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/labColorSelectorOnPrimary"
                    android:text="Disabled"
                    android:enabled="false"
                    android:layout_marginStart="@dimen/margin"
                    app:backgroundTint="?attr/labColorSelectorPrimary"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
