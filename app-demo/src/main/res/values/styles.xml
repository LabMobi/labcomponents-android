<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lab_primary</item>
        <item name="colorAccent">@color/lab_primary</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/lab_primary</item>
    </style>

    <style name="Text" parent="">
        <!-- Base text styles with fonts, etc.-->
        <!-- Add custom Text styles as neede. For example Text.Body.16 or Text.Title, Text.Subtitle.-->
         <item name="android:textColor">@color/lab_primary</item>
        <!-- <item name="android:fontFamily">@font/graphik_regular</item>-->
        <!-- <item name="fontFamily">@font/graphik_regular</item>-->
        <!-- <item name="android:lineHeight" tools:targetApi="p">@dimen/size_20</item>-->
        <!-- <item name="lineHeight">@dimen/size_20</item>-->
    </style>

    <style name="Text.Heading1">
        <item name="android:textSize">@dimen/lab_text_32</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/lab_text_48</item>
        <item name="lineHeight">@dimen/lab_text_48</item>
    </style>

    <style name="Text.Body16">
        <item name="android:textSize">@dimen/lab_text_16</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/lab_text_24</item>
        <item name="lineHeight">@dimen/lab_text_24</item>
    </style>

    <style name="Text.Button" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/lab_text_16</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/lab_primary</item>
        <item name="android:elevation">@dimen/lab_size_1</item>
        <item name="titleTextColor">@color/lab_white</item>
        <item name="titleMarginStart">@dimen/lab_size_64</item>
        <item name="android:theme">@style/Theme.Toolbar</item>
    </style>

    <style name="Theme.Toolbar" parent="">
        <item name="android:textColorSecondary">@color/lab_white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:elevation">0dp</item>
        <!-- Removes on click elevation animation -->
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button</item>
    </style>

    <style name="ShapeAppearance.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/lab_size_8</item>
    </style>
</resources>
