<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Lab.Theme.DayNight">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/black</item>

        <!-- TODO remove these. We need them for verification purposes -->
        <item name="labFontFamilyRegular">@font/font_regular</item>
        <item name="labFontFamilyMedium">@font/font_medium</item>
        <item name="labFontFamilySemibold">@font/font_semibold</item>
        <item name="labFontFamilyBold">@font/font_bold</item>

    </style>

    <style name="Text" parent="">
        <!-- Base text styles with fonts, etc.-->
        <!-- Add custom Text styles as neede. For example Text.Body.16 or Text.Title, Text.Subtitle.-->
<!--         <item name="android:textColor">@color/lab_primary</item>-->
        <!-- <item name="android:fontFamily">@font/graphik_regular</item>-->
        <!-- <item name="fontFamily">@font/graphik_regular</item>-->
        <!-- <item name="android:lineHeight" tools:targetApi="p">@dimen/size_20</item>-->
        <!-- <item name="lineHeight">@dimen/size_20</item>-->
    </style>

    <style name="Text.SectionHeadline" parent="Lab.TextAppearance.HeadlineLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.TextStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_8</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:elevation">@dimen/lab_size_1</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleMarginStart">@dimen/lab_size_64</item>
        <item name="android:theme">@style/Theme.Toolbar</item>
    </style>

    <style name="Theme.Toolbar" parent="">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>
