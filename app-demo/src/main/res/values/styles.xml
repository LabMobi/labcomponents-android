<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Lab.DayNight.Develop">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="Text.ListItem" parent="TextAppearance.Lab.BodyLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:paddingEnd">@dimen/margin</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.HeadlineLarge" parent="TextAppearance.Lab.HeadlineLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="Text.HeadlineSmall" parent="TextAppearance.Lab.HeadlineSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.TextStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:elevation">@dimen/lab_size_1</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleMarginStart">@dimen/lab_size_64</item>
        <item name="theme">@style/ThemeOverlay.Toolbar</item>
    </style>

    <style name="Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.Toolbar" parent="">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
</resources>
