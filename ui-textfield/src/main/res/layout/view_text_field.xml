<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/container_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lab_bg_textfield_outline"
        android:paddingTop="@dimen/lab_size_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#FF0000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:background="#FFFF00" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#0000FF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:background="#FF00FF" />

        <mobi.lab.components.ui.textfield.LabTextInputLayout
            android:id="@+id/input_layout"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:suffixText="This is a suffix">

            <mobi.lab.components.ui.textfield.LabTextInputEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.ui.textfield.LabTextInputLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/text_error"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:alpha="0.0"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/container_background"
        app:layout_constraintEnd_toEndOf="@id/container_background"
        app:layout_constraintTop_toBottomOf="@id/container_background" />

    <View
        android:layout_width="64dp"
        android:layout_height="8dp"
        android:background="#0000FF"
        app:layout_constraintStart_toStartOf="@id/container_background"
        app:layout_constraintBottom_toBottomOf="@id/container_background" />
</merge>
