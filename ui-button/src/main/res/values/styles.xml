<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Lab.ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingStart">@dimen/size_12</item>
        <item name="android:paddingEnd">@dimen/size_12</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Lab.Button</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Lab.Button</item>
        <item name="android:minHeight">@dimen/size_48</item>

        <item name="android:textColor">@color/button_primary_text</item>
        <item name="backgroundTint">@color/button_primary_tint</item>
        <item name="rippleColor">@color/button_primary_ripple</item>
    </style>

    <style name="Widget.Lab.ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingStart">@dimen/size_12</item>
        <item name="android:paddingEnd">@dimen/size_12</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Lab.Button</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Lab.Button</item>
        <item name="android:minHeight">@dimen/size_48</item>

        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="backgroundTint">@color/button_secondary_tint</item>
        <item name="rippleColor">@color/button_secondary_ripple</item>
        <item name="strokeColor">@color/button_secondary_stroke</item>
        <item name="strokeWidth">@dimen/size_1</item>
    </style>

    <style name="ShapeAppearance.Lab.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius</item>
    </style>

    <style name="TextAppearance.Lab.Button" parent="TextAppearance.AppCompat">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/text_24</item>
        <item name="lineHeight">@dimen/text_24</item>
<!--        TODO restore-->
<!--        <item name="android:fontFamily">@font/bold</item>-->
<!--        <item name="fontFamily">@font/bold</item>-->
    </style>
</resources>
