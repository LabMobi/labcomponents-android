    <style name="Widget.Lab.ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Lab.Button</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Lab.Button</item>
        <item name="android:minHeight">48dp</item>

        <item name="android:textColor">?attr/labColorOnPrimarySelector</item>
        <item name="backgroundTint">?attr/labColorPrimary</item>
        <item name="rippleColor">@color/lab_internal_button_primary_ripple</item>
