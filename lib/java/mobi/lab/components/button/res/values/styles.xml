    <style name="Widget.Lab.ButtonSecondary" parent="Widget.Material3.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Lab.Button</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Lab.Button</item>
        <item name="android:minHeight">48dp</item>

        <item name="android:textColor">@color/lab_internal_button_secondary_text</item>
        <item name="backgroundTint">@color/lab_internal_button_secondary_tint</item>
        <item name="rippleColor">@color/lab_internal_button_secondary_ripple</item>
        <item name="strokeColor">@color/lab_internal_button_secondary_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ShapeAppearance.Lab.Button" parent="ShapeAppearance.Lab.Default">
    </style>

    <style name="TextAppearance.Lab.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="lineHeight">24sp</item>
    </style>
