<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPalette">
        <!-- Top level color overrides -->
        <attr name="labColorPrimary" format="color"/>
        <attr name="labColorOnPrimary" format="color"/>
        <attr name="labColorSecondary" format="color"/>
        <attr name="labColorOnSecondary" format="color"/>
        <attr name="labColorSurface" format="color"/>
        <attr name="labColorOnSurface" format="color"/>
        <attr name="labColorBackground" format="color"/>
        <attr name="labColorOnBackground" format="color"/>
        <attr name="labColorTextPrimary" format="color"/>
        <attr name="labColorTextSecondary" format="color"/>
        <attr name="labColorError" format="color"/>

        <attr name="labColorSelectorPrimary" format="color"/>
        <attr name="labColorSelectorOnPrimary" format="color"/>
        <attr name="labColorSelectorSecondary" format="color"/>
        <attr name="labColorSelectorOnSecondary" format="color"/>
        <attr name="labColorSelectorTextPrimary" format="color"/>
        <attr name="labColorSelectorTextSecondary" format="color"/>

        <!-- TODO add error, success, caution attributes ?-->

        <!-- Individual color state overrides. These are used by top level colors by default. -->
        <attr name="labColorSelectorPrimaryRegular" format="color"/>
        <attr name="labColorSelectorPrimaryHover" format="color"/>
        <attr name="labColorSelectorPrimaryPressed" format="color"/>
        <attr name="labColorSelectorPrimaryDisabled" format="color"/>

        <attr name="labColorSelectorOnPrimaryRegular" format="color"/>
        <attr name="labColorSelectorOnPrimaryHover" format="color"/>
        <attr name="labColorSelectorOnPrimaryPressed" format="color"/>
        <attr name="labColorSelectorOnPrimaryDisabled" format="color"/>

        <attr name="labColorSelectorSecondaryRegular" format="color"/>
        <attr name="labColorSelectorSecondaryHover" format="color"/>
        <attr name="labColorSelectorSecondaryPressed" format="color"/>
        <attr name="labColorSelectorSecondaryDisabled" format="color"/>

        <attr name="labColorSelectorOnSecondaryRegular" format="color"/>
        <attr name="labColorSelectorOnSecondaryHover" format="color"/>
        <attr name="labColorSelectorOnSecondaryPressed" format="color"/>
        <attr name="labColorSelectorOnSecondaryDisabled" format="color"/>

        <attr name="labColorSelectorTextPrimaryRegular" format="color"/>
        <attr name="labColorSelectorTextPrimaryHover" format="color"/>
        <attr name="labColorSelectorTextPrimaryPressed" format="color"/>
        <attr name="labColorSelectorTextPrimaryDisabled" format="color"/>

        <attr name="labColorSelectorTextSecondaryRegular" format="color"/>
        <attr name="labColorSelectorTextSecondaryHover" format="color"/>
        <attr name="labColorSelectorTextSecondaryPressed" format="color"/>
        <attr name="labColorSelectorTextSecondaryDisabled" format="color"/>
    </declare-styleable>
</resources>
