<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabTextFieldErrorState">
        <attr name="state_error" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LabTextField">
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="textPaddingBottom" format="dimension"/>
        <attr name="textPaddingHorizontal" format="dimension"/>
        <attr name="clearErrorOnFocus" format="boolean"/>

        <!-- Override attrs -->
        <attr name="background" format="reference" />

    </declare-styleable>
</resources>
